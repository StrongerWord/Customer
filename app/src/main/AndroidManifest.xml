<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.customer">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.activity.RegisterActivity" />
        <activity android:name=".ui.login.activity.LoginActivity" />
        <activity android:name=".ui.login.activity.CompleteInfoActivity" />
        <activity android:name=".ui.admin.AdminMainActivity"/>
        <activity android:name=".ui.customer.MainActivity"/>

        <activity android:name=".ui.admin.LineActivity" />
        <activity android:name=".ui.admin.StationActivity" />
        <activity android:name=".ui.customer.RechargeActivity" />
        <activity android:name=".ui.customer.BuyTicketActivity" />
        <activity android:name=".ui.customer.OrderHistoryActivity" />
        <activity android:name=".ui.admin.CustomerManagerActivity" />
        <activity android:name=".ui.admin.CustomerDetailActivity" />
    </application>

</manifest>