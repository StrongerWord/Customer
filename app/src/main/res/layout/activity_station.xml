            app:title="站点管理"
            app:rightIcon="@mipmap/icon_black_add" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_stations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp" />

    </LinearLayout>
</layout>