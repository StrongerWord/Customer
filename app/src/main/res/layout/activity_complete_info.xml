<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layoutAnimation="@null">
        <com.hjq.bar.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:leftColor="@color/black"
            app:lineVisible="false"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginVertical="30dp"
            android:src="@mipmap/icon_logo" />

        <LinearLayout
            android:id="@+id/ll_login_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.android.customer.view.ClearEditText
                android:id="@+id/et_name"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:hint="请输入姓名(必填)"
                android:singleLine="true"/>

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="40dp" />

            <com.android.customer.view.ClearEditText
                android:id="@+id/et_sex"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:hint="请输入性别"
                android:maxLength="20"
                android:maxLines="1" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="40dp" />

            <com.android.customer.view.ClearEditText
                android:id="@+id/et_age"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:hint="请输入年龄(必填)"
                android:inputType="number"
                android:maxLength="20"
                android:maxLines="1" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="40dp" />

            <com.android.customer.view.ClearEditText
                android:id="@+id/et_id_number"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:hint="请输入身份证号(必填)"
                android:maxLength="20"
                android:maxLines="1" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="40dp" />

            <com.android.customer.view.ClearEditText
                android:id="@+id/et_birthday"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:hint="请选择出生日期"
                android:maxLength="20"
                android:maxLines="1" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="40dp" />

            <com.android.customer.view.ClearEditText
                android:id="@+id/et_home_address"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:hint="请输入家庭地址"
                android:maxLength="20"
                android:maxLines="1" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="40dp" />

            <com.android.customer.view.ClearEditText
                android:id="@+id/et_phone"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:hint="请输入手机号(必填)"
                android:inputType="number"
                android:maxLength="20"
                android:maxLines="1" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="40dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_commit"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="注册" />

        </LinearLayout>

        <View
            android:id="@+id/v_login_blank"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="5" />


    </LinearLayout>
</layout>